<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>CarRental</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
        <servlet-name>RentalController</servlet-name>
        <servlet-class>com.andreev.rental.controller.RentalServlet</servlet-class>
    </servlet>
	<servlet-mapping>
	    <servlet-name>RentalController</servlet-name>
	    <url-pattern>/rental</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>
			60
		</session-timeout>
	</session-config>
	<filter>
  		<filter-name>encodingFilter</filter-name>
			<filter-class>
				com.andreev.rental.filter.EncodingFilter
		</filter-class>
	</filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <servlet-name>RentalController</servlet-name>
	</filter-mapping>
	<listener>
    	<listener-class>com.andreev.rental.listener.ServletContextListenerImpl</listener-class>
	</listener>
</web-app>